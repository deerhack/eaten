version: "3.9"

services:
  web:
    build:
      context: .
      dockerfile: ./apps/web/Dockerfile
    restart: always
    ports:
      - "3000:3000"
    networks:
      - deerhack_network
    depends_on:
      - db

  api:
    build:
      context: .
      dockerfile: ./apps/api/Dockerfile
    restart: always
    ports:
      - 5000:5000
    networks:
      - deerhack_network
    depends_on:
      - db
    
  db:
    image: mariadb:10.7
    environment:
      MYSQL_ROOT_PASSWORD: phprocks
      MYSQL_DATABASE: mydatabase
      MYSQL_USER: deerhack
      MYSQL_PASSWORD: deerhackpassword
      DATABASE_DB: food_system
    ports:
      - 3306:3306
    volumes:
      - my_db:/var/lib/mysql

volumes:
  my_db:

networks:
  deerhack_network:
    # external: true